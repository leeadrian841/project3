<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Currently Available Tasks</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Info</th>
                    <th>Location</th>
                    <th>Duration (hours)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @otherTasks.each do |t| %>
                <tr>
                    <td><%= t.category %></td>
                    <td><%= t.info %></td>
                    <td><%= t.location %></td>
                    <td><%= t.duration %></td>
                    <td><%= link_to 'More Info', task_path(t) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

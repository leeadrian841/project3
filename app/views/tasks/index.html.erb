<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <%= link_to "Add new task", new_task_path, class: "btn btn-success btn-large" %>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Tasks In Progess</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Duration</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @workerTasks.each do |t| %>
                <tr>
                    <td><%= t.name %></td>
                    <td><%= t.location %></td>
                    <td><%= t.duration %></td>
                    <td><%= link_to 'More Info', task_path(t) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

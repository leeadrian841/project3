<%= link_to "Add new task", new_task_path, class: "btn btn-success btn-large" %>
<div class="row">
    <div class="col-md-12">
	<div class="row">
	    <div class="col-md-6">
		<h1>Offered Tasks</h1>
		<% @creatorTasks.each do |t| %>
		    <ul>
			<%= link_to 'Show', task_path(t) %>
			<li><%= t.name %></li>
			<ul>
			    <li><%= t.duration%></li>
			</ul>
		    </ul>
		<% end %>
	    </div>
	    <div class="col-md-6">
		<h1>Applied Tasks</h1>
		<% @appliedTasks.each do |t| %>
		    <ul>
			<%= link_to 'Show', task_path(t) %>
			<li><%= t.name %></li>
			<ul>
			    <li><%= t.duration%></li>
			</ul>
		    </ul>
		<% end %>
	    </div>
	    <h1>Tasks I'm Working On Now</h1>

	    <% @workerTasks.each do |t| %>
		<ul>
		    <%= link_to 'Show', task_path(t) %>
		    <li><%= t.name %></li>
		</ul>

	    <% end %>
	</div>
    </div>
</div>

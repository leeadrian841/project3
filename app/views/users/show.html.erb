<h1><%=@user.username%>'s profile</h1>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Tasks completed for others</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Duration</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @otherTasks.each do |t| %>
                <tr>
                    <td><%= t.name %></td>
                    <td><%= t.location %></td>
                    <td><%= t.duration %></td>
                    <td><%= link_to 'More Info', task_path(t) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

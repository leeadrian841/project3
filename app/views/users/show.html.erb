<div class="row top">
    <div class="col-md-10 col-md-offset-1">
        <h2><%=@user.username%>'s Profile</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-5 col-md-offset-1">
        <%= link_to "Edit Profile", edit_user_registration_path, method: :get, class: "btn btn-success btn-large" %>
    </div>
</div>
<div class="row top">
    <div class="col-md-10 col-md-offset-1">
        <h2>Tasks completed for others</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Info</th>
                    <th>Location</th>
                    <th>Duration</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @otherTasks.each do |t| %>
                <tr>
                    <td><%= t.category %></td>
                    <td><%= t.info %></td>
                    <td><%= t.location %></td>
                    <td><%= t.duration %></td>
                    <td><%= link_to 'More Info', task_path(t) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Tasks completed by others</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Info</th>
                    <th>Location</th>
                    <th>Duration</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @userTasks.each do |t| %>
                <tr>
                    <td><%= t.category %></td>
                    <td><%= t.info %></td>
                    <td><%= t.location %></td>
                    <td><%= t.duration %></td>
                    <td><%= link_to 'More Info', task_path(t) %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
